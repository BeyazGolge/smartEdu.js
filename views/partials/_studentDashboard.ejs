<h1>STUDENT DASHBOARD<span class="m_1">Welcome <%= user.name %></span></h1>
<div id="overviews" class="section wb">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 blog-post-single">
        <div class="blog-author">
          <div class="author-bio">
            <h3 class="author_name">Lectures you enrolled</h3>
          </div>
        </div>
        <!-- end col -->
      </div>
      <!-- end row -->
      <div class="row mt-5">
        <% for(let i=0; i< user.courses.length; i++) { %>

        <div class="col-lg-6 col-md-6 col-12">
          <div class="course-item mb-5">
            <div class="image-blog">
              <img src="images/blog_1.jpg" alt="" class="img-fluid" />
            </div>
            <div class="course-br">
              <div class="course-title">
                <h2>
                  <a href="/courses/<%= user.courses[i].slug%>" title=""
                    ><%= user.courses[i].name%></a
                  >
                </h2>
              </div>
              <div class="course-desc">
                <p><%= user.courses[i].description %></p>
                <form method="POST" action="/courses/release">
                  <input
                    type="hidden"
                    name="course_id"
                    value="<%= user.courses[i]._id %>"
                  />
                  <button class="btn btn-lg btn-danger text-white">
                    <span>Release Course</span>
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>

        <%}%>
        <!-- end col -->
      </div>
      <!-- end row -->
    </div>
    <!-- end container -->
  </div>
</div>
